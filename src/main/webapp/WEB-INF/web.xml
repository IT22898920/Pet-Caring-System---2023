<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
    <servlet>
    	<servlet-name>signup</servlet-name>
    	<servlet-class>com.customer.CustomerSignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>signup</servlet-name>
    	<url-pattern>/signup</url-pattern>
    </servlet-mapping>

	<servlet>
		<servlet-name>updatecustomer</servlet-name>
		<servlet-class>com.customer.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updatecustomer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deletecustomer</servlet-name>
		<servlet-class>com.customer.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletecustomer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	
	
	

	
	
	
	
	
	
	
	
	<servlet>
    	<servlet-name>adminLogin</servlet-name>
    	<servlet-class>com.admin.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>adminLogin</servlet-name>
    	<url-pattern>/adminlog</url-pattern>
    </servlet-mapping>
	
	
	<servlet>
		<servlet-name>spareParts</servlet-name>
		<servlet-class>com.SparePart.SparePartDetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>spareParts</servlet-name>
		<url-pattern>/spareParts</url-pattern>
	</servlet-mapping>
	
	

	
	
	
	
	
	
	
	
	
	
	
	
	
	<servlet>
		<servlet-name>addService</servlet-name>
		<servlet-class>com.service.serviceServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addService</servlet-name>
		<!-- the  pattern is included in the form action -->
		<url-pattern>/addService</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>myRequest</servlet-name>
		<servlet-class>com.service.CustomerRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>myRequest</servlet-name>
		<!-- the  pattern is included in the form action -->
		<url-pattern>/myRequest</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateCusReq</servlet-name>
		<servlet-class>com.service.UpdateCusRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateCusReq</servlet-name>
		<!-- the url pattern is included in the form action -->
		<url-pattern>/updateCusReq</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteCusReq</servlet-name>
		<servlet-class>com.service.DeleteCusRequestServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteCusReq</servlet-name>
		<!-- the  pattern is included in the form action -->
		<url-pattern>/deleteCusReq</url-pattern>
	</servlet-mapping>
	

	
	
	
	<!-- For SparePartInsert -->
	<servlet>
		<servlet-name>SparePartInsert</servlet-name>
		<servlet-class>com.SparePart.SparePartInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SparePartInsert</servlet-name>
		<url-pattern>/insertPart</url-pattern>
	</servlet-mapping>

	<!-- For UpdateSparePart -->
	<servlet>
		<servlet-name>UpdateSparePart</servlet-name>
		<servlet-class>com.SparePart.UpdateSparePartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateSparePart</servlet-name>
		<url-pattern>/updatePart</url-pattern>
	</servlet-mapping>

	<!-- For DeleteSparePart -->
	<servlet>
		<servlet-name>DeleteSparePart</servlet-name>
		<servlet-class>com.SparePart.DeleteSparePartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteSparePart</servlet-name>
		<url-pattern>/deletePart</url-pattern>
	</servlet-mapping>
	
	<!-- For SparePartDetails -->
	<servlet>
		<servlet-name>SparePartDetails2</servlet-name>
		<servlet-class>com.SparePart.SparePartDetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SparePartDetails2</servlet-name>
		<url-pattern>/details</url-pattern>
	</servlet-mapping>
	
	

	
	

</web-app>